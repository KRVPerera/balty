{
  "name": "balt",
  "scopeName": "source.balt",
  "foldingStartMarker": "\\{\\s*$",
  "foldingStopMarker": "^\\s*\\}",
  "patterns": [
    {
      "include": "#todo-keyword"
    },
    {
      "include": "#bal-body-block"
    },
    {
      "include": "#header-test-case"
    },
    {
      "include": "#header-description"
    },
    {
      "include": "#header-labels"
    },
    {
      "include": "#inline-bal-block"
    }
  ],
  "repository": {
    "todo-keyword": {
      "match": "TODO",
      "name": "keyword.todo.balt"
    },
    "function": {
      "match": "function",
      "name": "keyword.function"
    },
    "header-test-case": {
      "match": "Test-Case",
      "name": "keyword.test-case"
    },
    "header-description": {
      "match": "Description",
      "name": "keyword.description"
    },
    "header-labels": {
      "match": "Labels",
      "name": "keyword.labels"
    },
    "test-type": {
      "match": "(?Test-Case:)\\s*\\w+",
      "name": "constant.test.type"
    },
    "label-list": {
      "match": "(\\w+(-\\w+)*)(,\\s(\\w+(-\\w+)*))*",
      "name": "label.list"
    },
    "bal-body-block": {
      "begin": "^Labels:",
      "end": "^\\Test-Case:\\s.*$",
      "beginCaptures": {
        "0": { "name": "keyword.labels" },
        "1": { "name": "label.list" },
        "2": { "name": "meta.embedded.block.bal.open" }
      },
      "endCaptures": {
        "0": { "name": "keyword.test-case" },
        "1": { "name": "constant.test.type" },
        "2": { "name": "meta.embedded.block.bal.close" }
      },
      "name": "meta.embedded.inline.bal",
      "patterns": [
        {
          "include": "source.ballerina"
        }
      ]
    }
  }
}
