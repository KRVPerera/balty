{
    "name": "balty",
    "description": "A plugin to help ballerina conformance test writers",
    "author": "KRV Perera",
    "license": "MIT",
    "version": "0.8.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/vscode-extension-samples"
    },
    "publisher": "vscode-samples",
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.43.0"
    },
    "activationEvents": [
        "onLanguage:balt"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "balt",
                "extensions": [
                    ".balt"
                ],
                "aliases": [
                    "ballerian spec conformance test",
                    "balt"
                ],
				"configuration": "./syntaxes/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "balt",
                "scopeName": "source.balt",
                "path": "./syntaxes/balt.json",
                "embeddedLanguages": {
                    "meta.embedded.inline.bal": "ballerina"
                }
            },
            {
                "path": "./syntaxes/balt.injection.json",
                "scopeName": "comment.annotation.injection",
                "injectTo": ["source.balt", "source.ballerina"],
                "embeddedLanguages": {
                    "meta.embedded.inline.bal": "ballerina"
                }
              }
        ],
		"snippets": [
			{
			  "language": "balt",
			  "path": "./snippets/balt.json"
			},
            {
                "language": "ballerinaâ€”",
                "path": "./snippets/balt.json"
              }
		  ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "on",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^8.2.2",
        "@types/node": "^12.12.0",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "eslint": "^7.26.0",
        "js-yaml": "^4.1.0",
        "mocha": "^8.3.2",
        "typescript": "^4.4.3"
    }
}
