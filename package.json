{
  "name": "balty",
  "description": "A plugin to help ballerina conformance test writers",
  "author": "KRV Perera",
  "license": "MIT",
  "version": "0.15.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/KRVPerera/balty"
  },
  "publisher": "krvperera",
  "categories": [
    "Other",
    "Snippets",
    "Formatters"
  ],
  "icon": "images/icon.gif",
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:balt",
    "onCommand:balty.reorderLabels"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "commands": [
      {
        "command": "balty.reorderLabels",
        "title": "Reorder Labels",
        "category": "Balty"
      }
    ],
    "languages": [
      {
        "id": "balt",
        "extensions": [
          ".balt"
        ],
        "aliases": [
          "balt",
          "ballerian spec conformance test"
        ],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "balt",
        "scopeName": "source.balt",
        "path": "./syntaxes/balt.json",
        "source.ballerina": "ballerina",
        "embeddedLanguages": {
          "meta.embedded.block.ballerina": "ballerina"
        },
        "tokenTypes": {
          "meta.embedded.block.ballerina": "other"
        }
      },
      {
        "path": "./syntaxes/balt.injection.json",
        "scopeName": "comment.annotation.injection",
        "injectTo": [
          "source.balt",
          "source.ballerina"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.ballerina": "ballerina"
        }
      }
    ],
    "snippets": [
      {
        "language": "source.balt",
        "path": "./snippets/balt.json"
      }
    ],
    "activationEvents": [
      "onLanguage:balt"
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "balty.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "on",
          "description": "Traces the communication between VS Code and the language server."
        },
        "snippets.showSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Show Snippets suggestions when typing `>` or when using your IntelliSense default trigger."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.12.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "js-yaml": "^4.1.0",
    "mocha": "^8.3.2",
    "typescript": "^4.4.3"
  }
}
